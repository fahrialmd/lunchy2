<mvc:View
    controllerName="lunchy2.controller.OrderItemScreen"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <uxap:ObjectPageLayout
        id="idObjectPageLayout"
        upperCaseAnchorBar="false"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageHeader
                id="idObjectPageHeader"
                objectTitle="Order {orderNumber}"
                objectSubtitle="{description}"
            >
                <uxap:actions>
                    <uxap:ObjectPageHeaderActionButton
                        icon="sap-icon://edit"
                        text="Edit"
                        tooltip="Edit order"
                    />
                    <uxap:ObjectPageHeaderActionButton
                        icon="sap-icon://refresh"
                        text="Refresh"
                        tooltip="Refresh"
                    />
                    <uxap:ObjectPageHeaderActionButton
                        icon="sap-icon://delete"
                        text="Delete"
                        tooltip="Delete order"
                    />
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:headerContent>
            <VBox>
                <Text
                    text="Delivery Fee"
                    class=""
                />
                <ObjectNumber
                    number="{deliveryFee}"
                    unit="{currency_code}"
                />
            </VBox>
            <VBox>
                <Text
                    text="Discount"
                    class=""
                />
                <ObjectNumber
                    number="{discountPercent}"
                    unit="%"
                />
            </VBox>
            <VBox>
                <Text text="Discount Limit" />
                <ObjectNumber
                    number="{discountLimit}"
                    unit="{currency_code}"
                />
            </VBox>
            <VBox alignItems="Center">
                <Text text="Buyer" />
                <Text text="{user/userName}" />
            </VBox>
            <VBox class="sapUiTinyMarginTop ">
                <GenericTag
                    text="{status/name}"
                    status="{= 
                        ${status/code} === 'O' ? 'Warning' : 
                        ${status/code} === 'C' ? 'Success' : 
                        ${status/code} === 'A' ? 'Information' : 
                        'None'
                    }"
                />
            </VBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                title="Order Details"
                titleUppercase="false"
                class="noTopMargin"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Items Subtotals">
                        <HBox class="sapUiSmallMargin customGapHBox">
                            <VBox alignItems="Center">
                                <Text
                                    text="Total Price"
                                    class="sapUiTinyMarginBottom"
                                />
                                <ObjectNumber
                                    number="{totalAmountRaw}"
                                    unit="{currency_code}"
                                />
                            </VBox>
                            <VBox alignItems="Center">
                                <Text
                                    text="Overlimit Disc."
                                    class="sapUiTinyMarginBottom"
                                />
                                <ObjectNumber
                                    number="{discountLimitCalculated}"
                                    unit="{currency_code}"
                                />
                            </VBox>
                            <VBox alignItems="Center">
                                <Text
                                    text="Total Amount"
                                    class="sapUiTinyMarginBottom"
                                />
                                <ObjectNumber
                                    number="{totalAmount}"
                                    unit="{currency_code}"
                                />
                            </VBox>
                        </HBox>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="Items Details">
                        <table:Table
                            id="idOrderItemTable"
                            rows="{items}"
                            selectionMode="Multi"
                            enableColumnReordering="false"
                            rowMode="fixed"
                            alternateRowColors="true"
                            rowActionCount="1"
                        >
                            <table:extension>
                                <OverflowToolbar style="Clear">
                                    <Title
                                        id="idOrderItemsTableTitle"
                                        text="Order Items"
                                    />
                                    <ToolbarSpacer />
                                    <Button
                                        id="idAddItemButton"
                                        icon="sap-icon://add"
                                        press=".onButtonAddItemPress"
                                    />
                                </OverflowToolbar>
                            </table:extension>
                            <table:rowSettingsTemplate>
                                <table:RowSettings
                                    highlight="{= ${status_code} === 'P' ? 'Success' : 'Warning'}"
                                />
                            </table:rowSettingsTemplate>
                            <!-- Fixed row actions -->
                            <table:rowActionTemplate>
                                <table:RowAction>
                                    <table:items>
                                        <table:RowActionItem
                                            type="Delete"
                                            press="onRowActionItemPress"
                                            tooltip="Delete this item"
                                        />
                                    </table:items>
                                </table:RowAction>
                            </table:rowActionTemplate>
                            <table:columns>
                                <table:Column>
                                    <Label text="Customer Name" />
                                    <table:template>
                                        <ComboBox
                                            items="{/Users}"
                                            selectedKey="{user_ID}"
                                            placeholder="Search and select user..."
                                        >
                                            <core:ListItem
                                                key="{ID}"
                                                text="{userName}"
                                                additionalText="{userEmpID}"
                                            />
                                        </ComboBox>
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Menu Item" />
                                    <table:template>
                                        <Input value="{menu}" />
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Quantity" />
                                    <table:template>
                                        <Input value="{quantity}" />
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Price" />
                                    <table:template>
                                        <HBox alignItems="Center">
                                            <Input
                                                value="{price}"
                                                placeholder="0"
                                            />
                                        </HBox>
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Delivery Fee" />
                                    <table:template>
                                        <ObjectNumber
                                            number="{deliveryFee}"
                                            unit="{currency_code}"
                                        />
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Item Overlimit Disc." />
                                    <table:template>
                                        <ObjectNumber
                                            number="{overlimit}"
                                            unit="{currency_code}"
                                        />
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Total" />
                                    <table:template>
                                        <ObjectNumber
                                            number="{total}"
                                            unit="{currency_code}"
                                        />
                                    </table:template>
                                </table:Column>

                                <table:Column>
                                    <Label text="Status" />
                                    <table:template>
                                        <HBox alignItems="Center">
                                            <ComboBox
                                                items="{/ItemStatuses}"
                                                selectedKey="{status_code}"
                                                placeholder="Select status..."
                                            >
                                                <core:ListItem
                                                    key="{code}"
                                                    text="{name}"
                                                    additionalText="{code}"
                                                />
                                            </ComboBox>
                                        </HBox>
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
