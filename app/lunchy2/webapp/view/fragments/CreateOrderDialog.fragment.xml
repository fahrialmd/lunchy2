<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idCreateOrderDialog"
        title="Create New Order"
        contentWidth="500px"
        contentHeight="500px"
        resizable="true"
        draggable="true"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="idCreateOrderSimpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Order Information"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <!-- Order Number -->
                        <Label text="Order Number" />
                        <Input
                            id="idOrderNumberInput"
                            placeholder="Enter order number (max 12 chars)"
                            maxLength="12"
                            required="true"
                            value="{viewModel>/formData/OrderNumber}"
                        />

                        <!-- Description -->
                        <Label text="Description" />
                        <Input
                            id="idDescriptionInput"
                            placeholder="Enter order description"
                            maxLength="255"
                            required="true"
                            value="{viewModel>/formData/Description}"
                        />

                        <!-- User Selection -->
                        <Label text="Buyer" />
                        <ComboBox
                            id="idUsersComboBox"
                            items="{/Users}"
                            selectedKey="{viewModel>/formData/Buyer}"
                            placeholder="Search and select user..."
                            filterSecondaryValues="true"
                            showSecondaryValues="true"
                            required="true"
                        >
                            <core:ListItem
                                key="{ID}"
                                text="{userName}"
                                additionalText="{userEmpID}"
                            />
                        </ComboBox>

                        <!-- Order Date -->
                        <Label text="Order Date" />
                        <DatePicker
                            id="idOrderDateDatePicker"
                            placeholder="Select order date"
                            required="true"
                            displayFormat="dd/MM/yyyy"
                            valueFormat="yyyy-MM-dd"
                            value="{viewModel>/formData/OrderDate}"
                        />

                        <!-- Order Time -->
                        <Label text="Order Time" />
                        <TimePicker
                            id="idOrderTimeTimePicker"
                            placeholder="Select order time"
                            required="true"
                            displayFormat="HH:mm:ss"
                            valueFormat="HH:mm:ss"
                            value="{viewModel>/formData/OrderTime}"
                        />

                        <!-- Delivery Fee -->
                        <Label text="Delivery Fee" />
                        <Input
                            id="idDeliveryFeeInput"
                            placeholder="0"
                            type="Number"
                            required="true"
                            value="{viewModel>/formData/DeliveryFee}"
                        />

                        <!-- Discount Percent -->
                        <Label text="Discount %" />
                        <Input
                            id="idDiscountPercentInput"
                            placeholder="0.00"
                            type="Number"
                            value="{viewModel>/formData/Discount}"
                            description="Range: 0-100%"
                            required="true"
                        />

                        <!-- Discount Limit -->
                        <Label text="Discount Limit" />
                        <Input
                            id="idDiscountLimitInput"
                            placeholder="0"
                            type="Number"
                            value="{viewModel>/formData/DiscountLimit}"
                            required="true"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveButtonPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelButtonPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
