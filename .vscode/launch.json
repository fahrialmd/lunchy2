{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "cds watch",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "watch",
        "--port",
        "4004"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "pattern": "server listening on.*?(http://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "console": "integratedTerminal"
    }
  ]
}